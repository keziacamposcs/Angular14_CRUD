@model OrgMat.Models.TipoModel

@{
    ViewData["Title"] = "Editar";
}

<div class="pagetitle">
    <h1 class="display-4"> Editar</h1>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">

                <form method="post" action="/Tipo/Atualizar">
                    <input type="hidden" asp-for="id_tipo" />
                    <label for="inputText" class="col-sm col-form-label">Tipo:</label>
                    <input type="text" class="form-control" id="tipo" asp-for="tipo" />
                    <br />
                    <button type="submit" class="btn btn-primary" name="submit" value="submit">Atualizar</button>
                </form>
               
                <form method="post" action="/Tipo/Deletar">
                    <input type="hidden" asp-for="id_tipo" />
                    <button type="submit" class="btn btn-danger">Deletar</button>
                </form>

            </div>
        </div>
    </div>
</div>
