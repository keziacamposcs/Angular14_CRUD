@model List<OrgMat.Models.CriticidadeModel>
@{
    ViewData["Title"] = "Index";
}

<div class="pagetitle">
  <div class="row">
    <div class="col-md-6">
    <h1 class="display-4"> Criticidade de Material</h1>
    </div>
    <div class="col-md-6">
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-primary" role="button" asp-area="" asp-controller="Criticidade" asp-action="Cadastrar"> Cadastrar novo </a>
      </div>
    </div>
  </div>
</div>


<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <br />
            <div class="card-body">

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Criticidade</th>
                            <th scope="col">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.criticidade</td>
                                <td>
                                    <a class="btn btn-primary" href="Criticidade/Visualizar/@item.id_criticidade"><i class="bi bi-eye"></i></a>
                                    <a class="btn btn-success" href="Criticidade/Editar/@item.id_criticidade"><i class="bi bi-pencil"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>

    </div>
</div>

