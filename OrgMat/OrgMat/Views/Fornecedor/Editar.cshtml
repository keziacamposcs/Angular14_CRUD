@model OrgMat.Models.FornecedorModel

@{
    ViewData["Title"] = "Editar";
}


<div class="pagetitle">
  <div class="row">
    <div class="col-md-6">
    <h1 class="display-4"> Editar: Fornecedor</h1>
    </div>
    <div class="col-md-6">
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-primary" role="button" asp-area="" asp-controller="Fornecedor" asp-action="Index"> Voltar </a>
      </div>
    </div>
  </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">

                <form method="post" action="/Fornecedor/Atualizar">
                    <input type="hidden" asp-for="id_fornecedor" />

                    <label for="inputText" class="col-sm col-form-label">Fornecedor:</label>
                    <input type="text" class="form-control" id="fornecedor" asp-for="fornecedor" />

                    <label for="inputText" class="col-sm col-form-label">CNPJ:</label>
                    <input type="text" class="form-control" id="cnpj" name="cnpj" asp-for="cnpj" />

                    <label for="inputText" class="col-sm col-form-label">Endereço:</label>
                    <input type="text" class="form-control" id="endereco" name="endereco" asp-for="endereco" />

                    <label for="inputText" class="col-sm col-form-label">Telefone:</label>
                    <input type="text" class="form-control" id="telefone" name="telefone" asp-for="telefone" data-mask="(00) 00000-0000"/>
                    
                    <label for="inputText" class="col-sm col-form-label">E-mail:</label>
                    <input type="mail" class="form-control" id="email" name="email" asp-for="email" />

                    <label for="inputText" class="col-sm col-form-label">Vendedor:</label>
                    <input type="text" class="form-control" id="vendedor" name="vendedor" asp-for="vendedor" />

                    <br />
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">

                    <button type="submit" class="btn btn-primary" name="submit" value="submit">Atualizar</button>
                </form>
                <form method="post" action="/Fornecedor/Deletar">
                    <input type="hidden" asp-for="id_fornecedor" />
                    <button type="submit" class="btn btn-danger">Deletar</button>
                </form>
                </div>
            </div>
        </div>
    </div>
</div>
